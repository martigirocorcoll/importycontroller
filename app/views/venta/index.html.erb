<p id="notice"><%= notice %></p>

<h1>Venta</h1>

<table>
  <thead>
    <tr>
      <th>Precio</th>
      <th>Iva</th>
      <th>Fecha</th>
      <th>Persona</th>
      <th>Car</th>
      <th>Operacion</th>
      <th>Numero</th>
      <th>Coche cambio</th>
      <th>Coche cambio precio</th>
      <th>Coche cambio iva</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @venta.each do |ventum| %>
      <tr>
        <td><%= ventum.precio %></td>
        <td><%= ventum.iva %></td>
        <td><%= ventum.fecha %></td>
        <td><%= ventum.persona_id %></td>
        <td><%= ventum.car_id %></td>
        <td><%= ventum.operacion_id %></td>
        <td><%= ventum.numero %></td>
        <td><%= ventum.coche_cambio %></td>
        <td><%= ventum.coche_cambio_precio %></td>
        <td><%= ventum.coche_cambio_iva %></td>
        <td><%= link_to 'Show', ventum %></td>
        <td><%= link_to 'Edit', edit_ventum_path(ventum) %></td>
        <td><%= link_to 'Destroy', ventum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

