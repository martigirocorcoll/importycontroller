<p id="notice"><%= notice %></p>

<div class = "d-flex justify-content-around align-items-center">
<h1>Todos los coches</h1>
<%= link_to 'New Car', new_car_path, :class => "btn btn-outline-warning" %>
</div>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Creaci√≥n</th>
      <th>Marca</th>
      <th>Modelo</th>
      <th>Kilometraje</th>
      <th>Primeramat</th>
      <th>Chasis</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= link_to "#{car.created_at.strftime('%d-%m-%Y')}", car %></td>
        <td><%= car.marca %></td>
        <td><%= car.modelo %></td>
        <td><%= car.kilometraje %></td>
        <td><%= car.primeramat %></td>
        <td><%= car.chasis %></td>
        <td><%= link_to 'x', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

