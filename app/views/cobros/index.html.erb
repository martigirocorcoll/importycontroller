<p id="notice"><%= notice %></p>

<h1>Cobros</h1>

<table>
  <thead>
    <tr>
      <th>Cantidad</th>
      <th>Fecha teorica</th>
      <th>Fecha efectiva</th>
      <th>Sale</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cobros.each do |cobro| %>
      <tr>
        <td><%= cobro.cantidad %></td>
        <td><%= cobro.fecha_teorica %></td>
        <td><%= cobro.fecha_efectiva %></td>
        <td><%= cobro.sale_id %></td>
        <td><%= cobro.tipo %></td>
        <td><%= link_to 'Show', cobro %></td>
        <td><%= link_to 'Edit', edit_cobro_path(cobro) %></td>
        <td><%= link_to 'Destroy', cobro, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

