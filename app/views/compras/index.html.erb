<p id="notice"><%= notice %></p>

<div class = "d-flex justify-content-around align-items-center">
<h1>Todas las compras</h1>
<%= link_to '+ Nueva compra', new_compra_path, :class => "btn btn-outline-warning" %>
</div>

<table class = "table table-hover">
  <thead>
    <tr>
      <th>Cmpra</th>
      <th>Fecha</th>
      <th>Tipo</th>
      <th>Descripcion</th>
      <th>Precio</th>
      <th>Iva</th>
      <th>Persona</th>
      <th>Car</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @compras.each do |compra| %>
      <tr>
        <td><%= link_to "Nº #{compra.id}", compra %></td>
        <td><%= compra.fecha.strftime('%d-%m-%Y') %></td>
        <td><%= compra.tipo %></td>
        <td><%= compra.categoria %></td>
        <td><%= compra.precio %>€</td>
        <td><%= compra.iva.to_i * 100%>%</td>
        <td><%= link_to "#{compra.persona.nombre + " " + compra.persona.apellido}", compra.persona, :style=> "color: black;"  %></td>
        <td><%= link_to "#{compra.car.marca + " " + compra.car.modelo}", compra.car, :style=> "color: black;" %></td>
        <td><%= link_to 'x', compra, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
