<p id="notice"><%= notice %></p>

<div class = "d-flex justify-content-around align-items-center">
<h1>Todos los contactos</h1>
<%= link_to '+ Nuevo contacto', new_persona_path, :class => "btn btn-outline-warning " %>
</div>
<table class = "table">
  <thead>
    <tr>
      <th>Creaci√≥n</th>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Mail</th>
      <th>Telefono</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.created_at.strftime('%d-%m-%Y') %></td>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.mail %></td>
        <td><%= persona.telefono %></td>
        <td><%= link_to 'Show', persona %></td>
        <td><%= link_to 'Edit', edit_persona_path(persona) %></td>
        <td><%= link_to 'Destroy', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
