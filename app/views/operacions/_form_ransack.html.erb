<%= search_form_for @q do |f| %>
  <%= f.select :comptabilitzat_eq, ['','true', 'false'] %>
  <%= f.label :id_gteq, 'ID desde:' %>
  <%= f.select :id_gteq, Operacion.ids %>
  <%= f.label :id_lteq, 'Hasta:' %>
  <%= f.select :id_lteq, Operacion.ids %>
  <%= f.search_field :titol_cont, placeholder: "Busca una operacion "%>
  <%= f.label :venedor_cont, 'Comercial:' %>
  <%= f.select :venedor_cont, ["","Angel", "Yoan", "Marti"]%>

  <%= f.submit 'Filtrar', :class => "btn btn-secondary" %>
<% end %>
