
<%= simple_form_for(@operacion) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :titol, required: true %>
    <%= f.input :estado, required: true ,
    input_html: { class: 'select2' },
        collection: Operacion::ESTAT %>
    <%= f.input :venedor, required: true, collection: ["Angel", "Yoan", "Marti"] %>
    <%= f.input :comptabilitzat, default: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
